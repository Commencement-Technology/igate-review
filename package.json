{
  "name": "reactnative_template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android:development": "react-native run-android --variant=developmentDebug --appId 'vn.vnpt.qn.igate.development'",
    "android:staging": "react-native run-android --variant=stagingDebug --appId 'vn.vnpt.qn.igate.staging'",
    "android:prod": "react-native run-android --variant=productionDebug --appId 'vn.vnpt.qn.igate.production'",
    "android": "react-native run-android --variant=developmentDebug --appId 'vn.vnpt.qn.igate.development'",
    "build:apk-prod": "cd android && ./gradlew clean &&  ./gradlew assembleProductionRelease && cd --",
    "ios:development": "react-native run-ios --scheme 'ReactNative_Template' --simulator='iPhone 12'",
    "ios:staging": "react-native run-ios --scheme 'ReactNative_Template_Staging' --simulator='iPhone 12'",
    "ios:prod": "react-native run-ios --scheme 'ReactNative_Template_Production' --simulator='iPhone 12'",
    "ios": "react-native run-ios --scheme 'ReactNative_Template' --simulator='iPhone 12'",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
